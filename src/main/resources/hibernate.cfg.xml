<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:6060/git_translate</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.bsuir.translateService.entity.BranchEntity"/>
    <mapping class="com.bsuir.translateService.entity.CommitEntity"/>
    <mapping class="com.bsuir.translateService.entity.InvitationEntity"/>
    <mapping class="com.bsuir.translateService.entity.RepositoryEntity"/>
    <mapping class="com.bsuir.translateService.entity.UserEntity"/>
    <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>